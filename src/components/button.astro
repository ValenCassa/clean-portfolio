---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}
const props = Astro.props;
---

<a
  class="text-zinc-500 text-sm inline-flex gap-1 h-[29px] items-center px-2 bg-white rounded-md shadow-[0px_1px_4px_rgba(64,_64,_64,_0.12),_0px_0px_0px_1px_rgba(64,_64,_64,_0.08)]"
  {...props}
>
  <slot name="label" />
  <svg
    class="size-4"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="w-6 h-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="m12.75 15 3-3m0 0-3-3m3 3h-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
    ></path>
  </svg>
</a>
